upstream my_nodejs_upstream {
    server 127.0.0.1:3000;
    keepalive 64;
}

server {
    
    server_name spam-bot.app;
    root /var/www/spambot;
	
    set_real_ip_from 213.32.4.0/24;
    real_ip_header X-Forwarded-For;   
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
   
    location / {
        # Proxy_pass configuration
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_max_temp_file_size 0;
        proxy_pass http://spam-bot.app/;
        proxy_redirect off;
        proxy_read_timeout 240s;
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/spam-bot.app/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/spam-bot.app/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = spam-bot.app) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    
    server_name spam-bot.app;
    return 404; # managed by Certbot


}
